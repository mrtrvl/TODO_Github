<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GitHub Todo App</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <% if (user) { %>
    <h1>Welcome, <%= user.username %>!</h1>
    <h2>Your Todos:</h2>
    <ul>
      <% todos.forEach(todo => { %>
        <li><%= todo.title %></li>
      <% }) %>
    </ul>
    <form id="new-todo-form">
      <input type="text" id="new-todo-title" placeholder="Enter todo title" required />
      <button type="submit">Add Todo</button>
    </form>
    <p><a href="/auth/github/logout">Logout</a></p>
  <% } else { %>
    <h1>Hello, World!</h1>
    <p><a href="/auth/github">Login with GitHub</a></p>
  <% } %>
  <script src="/script.js"></script>
</body>
</html>